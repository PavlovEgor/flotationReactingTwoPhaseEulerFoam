// PIMPLE
// {
//     nOuterCorrectors 10;
//     nCorrectors      3;
//     nNonOrthogonalCorrectors 1;
// }
PIMPLE
{
    correctPhi true;
    momentumPredictor true;
    turbOnFinalIterOnly false;
    consistent false;
    nOuterCorrectors 5;
    nCorrectors     2;
    nNonOrthogonalCorrectors 1;
//    solvePrimaryRegion    false;
//    iterToSolve           100;
    pRefCell        0;
    pRefValue       0;
    residualControl
    {
        p
        {
            tolerance 1e-2;
            relTol 0;
        }
        U
        {
            tolerance 1e-3;
            relTol 0;
        }
        k
        {
            tolerance 1e-3;
            relTol 0;
        }
        epsilon
        {
            tolerance 1e-3;
            relTol 0;
        }
        nuTilda
        {
            tolerance 1e-3;
            relTol 0;
        }
    }
}

